<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileFragment">

        <ProgressBar
            android:id="@+id/user_profile_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/userprofilefragment_listv"
            app:layout_constraintEnd_toEndOf="@+id/userprofilefragment_listv"
            app:layout_constraintStart_toStartOf="@+id/userprofilefragment_listv"
            app:layout_constraintTop_toTopOf="@+id/userprofilefragment_listv" />

        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userprofilefragment_listv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>